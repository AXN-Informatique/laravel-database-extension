{
    "name": "axn/laravel-database-extension",
    "description": "Extension of the database section of the Laravel framework",
    "homepage": "https://github.com/AXN-Informatique/laravel-database-extension",
    "support": {
        "issues": "https://github.com/AXN-Informatique/laravel-database-extension/issues"
    },
    "authors": [
        {
            "name": "AXN Informatique",
            "email": "developpement@axn.fr"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.22.1",
        "driftingly/rector-laravel": "^2.0.5",
        "rector/rector": "^2.0.17"
    },
    "autoload": {
        "psr-4": {
            "Axn\\Illuminate\\Database\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Axn\\Illuminate\\Database\\ServiceProvider"
            ]
        }
    },
    "config" : {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true
}
